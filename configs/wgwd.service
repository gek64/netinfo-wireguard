[Unit]
Description=NetInfo Server
After=network.target

[Service]
Type=simple
User=root
ExecStart=/usr/local/bin/nwg get -remote_interface=pppoe0 -wg_interface=wg0 nconnect -id=center -endpoint=http://localhost:1996/ -interval=5s
Restart=on-failure
SyslogIdentifier=NetInfo Server

[Install]
WantedBy=multi-user.target